{
  "version": 2,
  "projects": [
    {
      "name": "cinephoria-frontend",
      "root": "./frontend",
      "builds": [
        {
          "src": "package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "dist"
          }
        }
      ],
      "routes": [
        {
          "src": "/(.*)",
          "dest": "/dist/$1"
        }
      ]
    },
    {
      "name": "cinephoria-backend",
      "root": "./backend",
      "builds": [
        {
          "src": "server.js",
          "use": "@vercel/node"
        }
      ],
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/server.js"
        }
      ]
    }
  ]
}
