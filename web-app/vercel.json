{
  "version": 2,
  "name": "cinephoria-app",
  "builds": [
    {
      "src": "web-app/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "web-app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-app/frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/web-app/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/web-app/frontend/dist/$1"
    }
  ]
}
